<div class="modal quick-order">
    <button class="modal-close">
        <svg class="modal-close__icon">
            <use href="#icon-close" />
        </svg>
    </button>
    <div class="modal__heading">
        <h2 class="modal__title">{{ cw_callback_title }}</h2>
    </div>
    <div class="modal__messages"></div>
    <div class="modal__body">

        <img src="{{ thumb }}" />

        <form class="callback__form" action="#">
            <div class="modal__input-group">
                <label class="modal__label">{{ cw_callback_name }}</label>
                <input name="name" class="modal__input" type="text" />
            </div>

            <div class="modal__input-group">
                <label class="modal__label">{{ cw_callback_tel }}</label>
                <input name="tel" class="modal__input" type="text" type="password" />
            </div>

            <button class="button button_view_action width-full" type="submit">{{ cw_callback_send }}</button>
        </form>

        <p class="modal__footnote">{{ cw_callback_terms }}</p>
    </div>
</div>

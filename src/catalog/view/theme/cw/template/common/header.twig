<!DOCTYPE html>
<html lang="ru">
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <base href="{{ base }}" />
    {% if description %}
        <meta name="description" content="{{ description }}" />
    {% endif %}
    {% if keywords %}
        <meta name="keywords" content="{{ keywords }}" />
    {% endif %}
    <!-- End Meta -->

    <!-- Stylesheets -->
    <style>
        .icon{display:none}
    </style>
    {% for style in styles %}
        <link href="{{ style.href }}" rel="{{ style.rel }}" />
    {% endfor %}
    <!-- End Stylesheets -->

    <!-- Scripts -->
    <script defer src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script defer src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script defer src="catalog/view/theme/cw/vendors/bootstrap/bootstrap.bundle.min.js"></script>

    {% for script in scripts %}
        <script defer src="{{ script }}"></script>
    {% endfor %}
    <!-- End Scripts -->

    {% for link in links %}
        <link href="{{ link.href }}" rel="{{ link.rel }}" />
    {% endfor %}

    {% for analytic in analytics %}
        {{ analytic }}
    {% endfor %}
</head>
<body>
    <div class="header-prepend">
        <div class="container">
            <a class="header-prepend__tel" href="tel:{{ telephone|replace({' ': '', '-': '', '(': '', ')': ''}) }}">{{ telephone }}</a>
            {% if telephone2 %},
                <a class="header-prepend__tel" href="tel:{{ telephone2|replace({' ': '', '-': '', '(': '', ')': ''}) }}">{{ telephone2 }}</a>
            {% endif %}
            {% if open %}
                – {{ open }}
            {% endif %}
            <button class="callback-button" type="button" data-toggle="modal" data-target="#callbackModal">
                Перезвоните мне
            </button>
        </div>
    </div>

    <header class="header">
        <div class="header__main">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col">
                        {{ header_left }}
                    </div>

                    <div class="col-auto">
                        {% if logo %}
                            <a class="logo" href="{{ home }}">
                                <img class="logo__image" src="{{ logo }}" title="{{ name }}" alt="{{ name }}" />
                            </a>
                        {% else %}
                            <a class="logo-placeholder" href="{{ home }}">{{ name }}</a>
                        {% endif %}
                    </div>

                    <div class="col d-flex flex-row justify-content-end align-middle">
                        <div class="button-group">

                            {% if logged %}
                                <a class="button button_view_plain" href="{{ account }}">
                                    <!--svg class="icon">
                                        <use href="#icon-user" />
                                    </svg-->
                                </a>
                            {% else %}
                                <button class="button button_view_plain" type="button" data-toggle="modal" data-target="#authModal">
                                    <span class="button__body">
                                        Вход
                                    </span>
                                </button>
                            {% endif %}

                            {{ cart }}

                            <a class="button button_view_plain" id="wishlist" href="{{ wishlist }}">
                                <span class="button__body">
                                    <svg class="icon">
                                        <use href="#icon-favorite" />
                                    </svg>
                                </span>
                                {% if count_wishlist %}
                                    <span class="button__badge">{{ count_wishlist }}</span>
                                {% endif %}
                            </a>

                            <button class="button button_view_plain" id="button-search">
                                <span class="button__body">
                                    <svg class="icon">
                                        <use href="#icon-search" />
                                    </svg>
                                </span>
                            </button>


                        </div>

                    </div>
                </div>
            </div>
        </div>

        {{ search }}

        {{ menu }}
    </header>
